<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_60"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <ProgressBar

            android:id="@+id/pb_play"
            style="@style/ProgressPlay"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_y_8"
            android:layout_marginLeft="@dimen/layout_x_20"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"/>

        <Button
            android:id="@+id/btn_playToggle"
            android:layout_width="@dimen/layout_x_40"
            android:layout_height="@dimen/layout_x_40"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/layout_x_20"
            android:background="@drawable/ico_play_start"
            android:clickable="true"
            android:textOff=""
            android:textOn=""/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_1"
        android:background="@color/grayLine"/>

    <LinearLayout
        android:id="@+id/rg_speed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_40"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_s1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_speed_checked"/>

            <TextView
                android:id="@+id/tv_s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:text="x1"
                android:textColor="@color/actionsheet_blue"/>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/layout_x_1"
            android:layout_height="match_parent"
            android:background="@color/grayLine"/>

        <LinearLayout
            android:id="@+id/ll_s2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_speed_checked"/>

            <TextView
                android:id="@+id/tv_s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:text="x2"
                android:textColor="@color/actionsheet_blue"/>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/layout_x_1"
            android:layout_height="match_parent"
            android:background="@color/grayLine"/>

        <LinearLayout
            android:id="@+id/ll_s3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_s3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_speed_checked"/>

            <TextView
                android:id="@+id/tv_s3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:text="x3"
                android:textColor="@color/actionsheet_blue"/>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/layout_x_1"
            android:layout_height="match_parent"
            android:background="@color/grayLine"/>

        <LinearLayout
            android:id="@+id/ll_s4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_s4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_speed_checked"/>

            <TextView
                android:id="@+id/tv_s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:text="x4"
                android:textColor="@color/actionsheet_blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>