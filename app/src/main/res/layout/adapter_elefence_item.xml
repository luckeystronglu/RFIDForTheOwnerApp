<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >

    <RelativeLayout
        android:id="@+id/nonn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_row_height"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="@dimen/layout_x_26"
            android:layout_height="@dimen/layout_x_26"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/font_size_small"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/layout_x_30"/>
        <!--android:background="@drawable/shape_label_orange"-->
        <!--android:background="@drawable/defence_item_tv_num"-->

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:layout_toRightOf="@+id/tv_tag"
            android:textColor="@color/black"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/layout_x_50"
            android:layout_height="@dimen/layout_y_30"
            android:layout_marginTop="@dimen/layout_y_10"
            android:layout_marginBottom="@dimen/layout_y_10"
            android:text="@string/edit"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_x_16"
            android:background="@drawable/shape_defencelist_edit"/>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_edit"
            android:paddingRight="@dimen/layout_x_20"
            android:layout_centerVertical="true"
            android:textColor="@color/textDarkGray"
            android:gravity="center"
            android:textSize="@dimen/font_size_small"/>

    </RelativeLayout>
    <View
        android:layout_below="@+id/nonn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_vertical_normal"
        android:background="@color/listBackColor"
            />

</RelativeLayout>