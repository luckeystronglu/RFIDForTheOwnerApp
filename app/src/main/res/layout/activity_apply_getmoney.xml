<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seting_background"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_layout_style">

        <ImageView
            android:id="@+id/btn_getmoney_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="@dimen/distance_width_12"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/icon_back" />


        <TextView
            android:id="@+id/tv_get_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/apply_cash"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/font_size_normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_80"
        android:background="@color/white"
        android:divider="@drawable/divider_line_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/ll_big_place"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            >

            <LinearLayout
                android:id="@+id/ll_getmoney_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_x_6">

                <ImageView
                    android:id="@+id/iv_getmoney_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_xc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_x_12"
                    android:text="@string/spotcash"
                    android:textColor="@color/font_light_black"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_big_tranport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_getmoney_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_x_6">

                <ImageView
                    android:id="@+id/iv_getmoney_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_xc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_x_12"
                    android:text="@string/personalcash"
                    android:textColor="@color/font_light_black"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_1"
        android:background="@color/textGray" />

    <LinearLayout
