            android:layout_marginRight="@dimen/layout_x_20"
            android:layout_marginTop="@dimen/layout_y_16"
            android:background="@drawable/login_edittext_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_x_100"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_x_20"
                android:text="@string/name"
                android:textColor="@color/font_light_black"
                android:textSize="@dimen/font_size_normal" />

            <View
                android:layout_width="@dimen/layout_x_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_marginRight="@dimen/layout_x_10"
                android:background="@color/textGray" />

            <EditText
                android:id="@+id/et_cash_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的姓名"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_height_60"
            android:layout_marginLeft="@dimen/layout_x_20"
            android:layout_marginRight="@dimen/layout_x_20"
            android:layout_marginTop="@dimen/layout_y_12"
            android:background="@drawable/login_edittext_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_x_100"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_x_20"
                android:text="@string/account"
                android:textColor="@color/font_light_black"
                android:textSize="@dimen/font_size_normal" />

            <View
                android:layout_width="@dimen/layout_x_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_marginRight="@dimen/layout_x_10"
                android:background="@color/textGray" />

            <EditText
                android:id="@+id/et_cash_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入银行账号"
                android:inputType="number"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_height_60"
            android:layout_marginLeft="@dimen/layout_x_20"
            android:layout_marginRight="@dimen/layout_x_20"
            android:layout_marginTop="@dimen/layout_y_12"
            android:background="@drawable/login_edittext_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_x_100"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_x_20"
                android:text="@string/bank"
                android:textColor="@color/font_light_black"
                android:textSize="@dimen/font_size_normal" />

            <View
                android:layout_width="@dimen/layout_x_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_marginRight="@dimen/layout_x_10"
                android:background="@color/textGray" />

            <EditText
                android:id="@+id/et_cash_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入开户行"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>

        <!--赔付金额-->
