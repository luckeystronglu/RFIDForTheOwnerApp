            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_height_60"
            android:layout_marginLeft="@dimen/layout_x_20"
            android:layout_marginRight="@dimen/layout_x_20"
            android:layout_marginTop="@dimen/layout_y_12"
            android:background="@drawable/login_edittext_shape"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_x_100"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_x_20"
                android:text="@string/payaccount"
                android:textColor="@color/font_light_black"
                android:textSize="@dimen/font_size_small" />

            <View
                android:layout_width="@dimen/layout_x_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_marginRight="@dimen/layout_x_10"
                android:background="@color/textGray" />

            <TextView
                android:id="@+id/tv_payout_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>
    </LinearLayout>

