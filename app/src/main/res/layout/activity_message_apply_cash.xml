<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seting_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_setting"
        style="@style/title_layout_style"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/cash_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onBack"
            android:paddingLeft="@dimen/distance_width_16"
            android:scaleType="matrix"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/icon_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/applycash"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/font_size_normal" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_1"
        android:layout_below="@+id/rl_type"
        android:background="@color/textGray" />

    <RelativeLayout
        android:id="@+id/rl_personal_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_70"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginRight="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_20"
            android:background="@drawable/login_edittext_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_25"
                android:text="@string/personalUserName"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_size_normal" />

            <View
                android:layout_width="@dimen/layout_y_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_100"
                android:background="@color/textGray" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_130"
                android:background="@null"
                android:hint="请输入您的姓名"
                android:textSize="@dimen/font_size_normal" />
        </RelativeLayout>
        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_70"
            android:layout_marginTop="@dimen/layout_y_100"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginRight="@dimen/layout_y_20"
            android:background="@drawable/login_edittext_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardid"
                android:textSize="@dimen/font_size_normal"
                android:layout_marginLeft="@dimen/layout_y_25"
                android:textColor="@color/textBlack"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="@dimen/layout_y_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_marginLeft="@dimen/layout_y_100"
                android:layout_centerVertical="true"
                android:background="@color/textGray"/>
            <EditText
                android:id="@+id/et_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_normal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_130"
                android:background="@null"
                android:hint="请输入您的证件号码"/>
        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_70"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginRight="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_100"
            android:background="@drawable/login_edittext_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_25"
                android:text="@string/account"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_size_normal" />

            <View
                android:layout_width="@dimen/layout_y_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_100"
                android:background="@color/textGray" />

            <TextView
                android:id="@+id/tv_bank_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_130"
                android:background="@null"
                android:hint="请输入银行帐号"
                android:inputType="number"
                android:textSize="@dimen/font_size_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_70"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginRight="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_180"
            android:background="@drawable/login_edittext_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_25"
                android:text="@string/bank"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_size_normal" />

            <View
                android:layout_width="@dimen/layout_y_1"
                android:layout_height="@dimen/layout_y_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_100"
                android:background="@color/textGray" />

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_130"
                android:background="@null"
                android:hint="请输入开户行"
                android:textSize="@dimen/font_size_normal" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_spot_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:visibility="gone">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_y_130"
            android:layout_marginTop="@dimen/layout_y_40"
            android:src="@drawable/ico_aw" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_60"
            android:layout_toRightOf="@id/logo"
            android:text="@string/payaccount"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_90"
            android:layout_toRightOf="@id/logo"
            android:text="￥1300"
            android:textColor="@color/actionsheet_blue"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginRight="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_160"
            android:gravity="center"
            android:text="提现地址：广东省深圳市龙岗区星河"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:layout_width="@dimen/layout_x_430"
            android:layout_height="@dimen/layout_y_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_y_200"
            android:background="@color/textGray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_y_20"
            android:layout_marginRight="@dimen/layout_y_20"
            android:layout_marginTop="@dimen/layout_y_220"
            android:background="@drawable/updatepw_edittext_shape"
            android:padding="@dimen/layout_x_10"
            android:text="注意：请携带个人身份证，保单以及丢失证明前往，如有证件携带不齐全可能会造成不便！！"
            android:textSize="@dimen/font_size_normal" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_spot_cash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_50"
        android:layout_marginLeft="@dimen/layout_y_20"
        android:layout_marginRight="@dimen/layout_y_20"
        android:layout_marginTop="@dimen/layout_y_550"
        android:background="@drawable/bg_fence_add_btn"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/font_size_larger"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_cash_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_y_20"
        android:layout_marginRight="@dimen/layout_y_20"
        android:layout_marginTop="@dimen/layout_y_550"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_warning"
            android:drawablePadding="@dimen/layout_y_10"
            android:text="抱歉，您的车辆申请提现审核未通过！"
            android:textColor="@color/font_color_red"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_reject_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_y_10"
            android:text=""
            android:textColor="@color/font_color_gray"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_60"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_setting"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/ll_spot_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/iv_spot_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_25"
                android:background="@drawable/ico_xc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_y_25"
                android:layout_toRightOf="@id/iv_spot_cash"
                android:text="@string/spotcash"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_size_normal" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/layout_x_1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/textGray" />

        <RelativeLayout
            android:id="@+id/ll_personal_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/iv_personal_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_y_20"
                android:background="@drawable/ico_xc_click" />

            <TextView
                android:id="@+id/tv_personal_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_y_40"
                android:layout_toRightOf="@id/iv_personal_cash"
                android:text="@string/personalcash"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_size_normal" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>