<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seting_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >


    <RelativeLayout
        style="@style/title_layout_style"
        android:id="@+id/rl_setting">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_horizontal_large"
            android:paddingRight="@dimen/margin_horizontal_large"
            android:paddingTop="@dimen/btn_padding_default_y"
            android:paddingBottom="@dimen/btn_padding_default_y"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:clickable="true"
            android:background="@null"
            android:onClick="updatePasswordBack"
            android:scaleType="matrix"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:text="@string/updatePassword"
            android:textSize="@dimen/font_size_normal" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/seting_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/originalPassword"
            android:layout_width="@dimen/layout_x_420"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_y_40"
            android:background="@drawable/login_edittext_shape"
            android:gravity="left"
            android:hint="@string/updatePasswordOriginal"
            android:maxLength="12"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textColorHint="@color/textGray"
            android:drawableLeft="@drawable/ico_mm1"
            android:drawablePadding="@dimen/layout_y_8"
            android:maxLines="1"
            android:padding="@dimen/update_pw_et_padding"
            android:singleLine="true"
            android:textSize="@dimen/font_size_normal"/>

        <EditText
            android:id="@+id/newPassWord"
            android:layout_width="@dimen/layout_x_420"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/update_pw_et_distancemgi"
            android:background="@drawable/login_edittext_shape"
            android:gravity="left"
            android:hint="@string/updatePasswordNew"
            android:drawableLeft="@drawable/ico_mm2"
            android:drawablePadding="@dimen/layout_y_8"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:textColorHint="@color/textGray"
            android:maxLength="12"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/update_pw_et_padding"
            android:singleLine="true"
            android:textSize="@dimen/font_size_normal"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="@dimen/layout_x_420"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/update_pw_et_distancemgi"
            android:background="@drawable/login_edittext_shape"
            android:gravity="left"
            android:hint="@string/updatePasswordConfirm"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:textColorHint="@color/textGray"
            android:drawableLeft="@drawable/ico_mm3"
            android:drawablePadding="@dimen/layout_y_8"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/update_pw_et_padding"
            android:singleLine="true"
            android:textSize="@dimen/font_size_normal"/>

        <Button
            android:id="@+id/savebtn"
            android:layout_width="@dimen/layout_x_420"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/update_pw_btn_distancemgi"
            android:background="@drawable/bg_fence_add_btn"
            android:clickable="true"
            android:onClick="onSaveClick"
            android:gravity="center"
            android:text="@string/updatePasswordSure"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/font_size_larger"/>
    </LinearLayout>


</LinearLayout>