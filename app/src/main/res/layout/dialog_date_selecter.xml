<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_240"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_x_60"
            android:paddingLeft="@dimen/layout_x_20"
            android:paddingRight="@dimen/layout_x_20">

            <Button
                android:id="@+id/btn_no"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_x_40"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_round_corner_blue"
                android:text="取消"
                android:textColor="@color/actionsheet_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择详细时间"
                android:textColor="@color/actionsheet_blue"/>

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_x_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_round_blue"
                android:text="确定"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_x_16">

            <com.foxconn.rfid.theowner.view.widgets.CustomNumberPicker
                android:id="@+id/np_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:descendantFocusability="blocksDescendants"/>

            <com.foxconn.rfid.theowner.view.widgets.CustomNumberPicker
                android:id="@+id/np_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:descendantFocusability="blocksDescendants"/>

            <com.foxconn.rfid.theowner.view.widgets.CustomNumberPicker
                android:id="@+id/np_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:descendantFocusability="blocksDescendants"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>