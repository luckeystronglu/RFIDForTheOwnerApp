<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bg_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/title_layout_style">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onBack"
            android:padding="6dp"
            android:paddingLeft="@dimen/margin_horizontal_large"
            android:paddingRight="@dimen/margin_horizontal_large"
            android:scaleType="matrix"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/icon_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/myInsurance"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_220"
        android:background="@drawable/ico_top_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/background_insurance" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_60"
        android:background="@color/white"
        android:paddingLeft="@dimen/layout_x_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_insurance_info"
            android:textColor="@color/title_color_blue"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/left"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_buy_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买保险"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@drawable/shape_tv_buyinsu"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_x_20"
            />
    </RelativeLayout>

    <!-- <ImageView
            android:layout_width="wrap_content"
