    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/layout_x_14"
        android:paddingRight="@dimen/layout_x_14"
        android:scrollbars="none"
        >

        <com.foxconn.rfid.theowner.view.SVListView
            android:id="@+id/lv_insurance_info"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/layout_x_10"
            android:paddingBottom="@dimen/layout_x_20"
            android:layout_height="match_parent"
            android:divider="@color/me_bg_gray"
            android:dividerHeight="@dimen/layout_x_10"
            />
        <!-- android:divider="#00000000"
